{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": ".",
    "jsx": "react-jsx",
    "jsxImportSource": "@coloop-ai/incantations",
    "baseUrl": ".",
    "paths": {
      "@coloop-ai/incantations/jsx-runtime": ["./src/jsx-runtime.ts"],
      "@coloop-ai/incantations/jsx-dev-runtime": ["./src/jsx-dev-runtime.ts"],
      "@coloop-ai/incantations": ["./src/index.ts"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "*.config.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
